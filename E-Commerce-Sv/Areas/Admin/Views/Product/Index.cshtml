@model List<Product>

<h1>PRODUCTS</h1>
<table class="table table-bordered table-striped">
	<tbody>
			
			@foreach (var product in Model)
			{
			<tr>
				<td>
						@product.Name
				</td>
				<td>
						@product.Price Euros
				</td>
				<td>
						@product.Description
				</td>
				<td>
					
				</td>
				<td>
					<div>
						
					</div>
					<div>
						<a asp-controller="Product" asp-action="Upsert" asp-route-id="@product.Id" class="btn btn-primary mx-2">
							Edit
						</a>
					</div>
				</td>
				<td>
					<div>
						<a asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id" class="btn btn-primary mx-2">
							Delete
						</a>
					</div>
				</td>
			</tr>
			}
	</tbody>
	<a asp-action="Upsert" class="btn btn-primary">
		Create Product
	</a>
</table>




