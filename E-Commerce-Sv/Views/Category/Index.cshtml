@model List<Category>

<h1>Categories</h1>

<table class="table table-bordered table-striped">
	<thead>
	<tbody>
			@foreach (var cat in Model)
			{
			<tr>
				<td>
						@cat.Name
				</td>
				<td>
						@cat.Description 
				</td>
				<td>
					<div>
						<a asp-controller="Category" asp-action="Edit" asp-route-id="@cat.Id" class="btn btn-primary mx-2">
							Edit
						</a>
					</div>
				</td>
				<td>
					<div>
						<a asp-controller="Category" asp-action="Delete" asp-route-id="@cat.Id" class="btn btn-primary mx-2">
							Delete
						</a>
					</div>
				</td>
			</tr>
			}
	</tbody>
	</thead>
</table>

<a asp-controller="Category" asp-action="Create" class="btn btn-primary">
	Create Category
</a>